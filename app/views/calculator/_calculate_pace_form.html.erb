<form action="calculator/results">
	Units:
	<br>
	<input type="radio" name="units" value="metric">Metric</input>
	<input type="radio" name="units" value="imperial">Imperial</input>
	<br>
	<br>
	Target distance (km): <input type="number" name="distance" value="10", step="0.1", min="0">
	<br>
	<br>
	Target time:
	<br>
	Hours <input type="number" name="hours" value="0", min="0">
	Minutes <input type="number" name="minutes" value="50", min="0">
	Seconds <input type="number" name="seconds" value="0", min="0">
	<br>
	<br>
	Incline: <input type="number" name="incline" value="0", step="0.5", min="0">%
	<br>
	<br>
	<input type="submit" value="Calculate">
</form>