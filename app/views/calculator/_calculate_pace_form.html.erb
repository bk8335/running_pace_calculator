<form action="calculator/results">
	<br>
	<div class="form-inline">
		<strong>Target distance:</strong>
		<br>
		<input type="number" name="distance" value="10", step="0.1", min="0">
		<select class="form-control" name="units">
			<option>km</option>
			<option>miles</option>
		</select>
	</div>
	<br>
	<strong>Target time:</strong>
	<br>
	Hours <input type="number" name="hours" value="0", min="0">
	Minutes <input type="number" name="minutes" value="50", min="0">
	Seconds <input type="number" name="seconds" value="0", min="0">
	<br>
	<br>
	<strong>Incline:</strong>
	<br>
	<input type="number" name="incline" value="0", step="0.5", min="0">%
	<br>
	<br>
	<input type="submit" value="Calculate" class="submit">
</form>